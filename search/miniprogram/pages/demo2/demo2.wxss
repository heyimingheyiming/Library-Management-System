/* pages/demo1/demo1.wxss */
.container{
    font-size:15px;
    display:flex;
    flex-direction: column;
    width:100%;
}

.borrowed{
   
    /*border:0.5px solid rgb(163, 161, 161);*/
    display: flex;
    color: rgb(0, 0, 0);
    flex-direction: column;
    width:100%;
    height:210px;/*200px*/
    background-color: rgb(255, 255, 255);
}

.book{
    border-top:0.5px solid rgb(163, 161, 161);
    display:flex;
    flex-direction: row;
    height:150px;
    width:100%;
    padding-top:20px;
    padding-left:12px;
    line-height:160%;
}

.book image{
    border:1px solid rgb(114, 111, 111);
}

.book_name{
    font-size:16px;
    font-weight:bold;
}

.book_text{
    padding-left:16px;
    display: flex;
    color: rgb(19, 18, 18);
    flex-direction: column;
    background-color: rgb(254, 254, 255);
}

.chaxunjieguo{
    font-size:16px;
    padding-left:5px;
    padding-top: 10px;
    padding-bottom: 10px;
}

.shelf{
    display: flex;
    border:0.5px solid rgb(163, 161, 161);
    padding-bottom:10px;
    align-items : center;
}

.bookshelf {
    width: 40%;
    margin-top: 20rpx;
    background-color: rgb(143, 233, 134);
    color: rgb(7, 7, 7);
    border-radius: 98rpx; 
    text-align: center;
  }

.container1{
    padding-left:5px;
    padding-top:5px;
    font-size:15px;
    font-weight:700;
}
.content{
    text-indent : 20px;
    padding-top:5px;
    padding-right: 8px;
    padding-left:10px;
    padding-bottom:10px;
    line-height:150%;
    font-size:13.5px;
    font-weight:300;
}