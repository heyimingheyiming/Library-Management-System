/* pages/demo1/demo1.wxss */
.container{
    font-size:15px;
    
    display:flex;
    flex-direction: column;
    width:100%;
}

.borrowed{
   
    border:0.5px solid rgb(163, 161, 161);
    display: flex;
    color: rgb(0, 0, 0);
    flex-direction: column;
    width:100%;
    background-color: rgb(255, 255, 255);
}

.book{

    border-top:0.5px solid rgb(163, 161, 161);
    display:flex;
    flex-direction: row;
    height:150px;
    width:100%;
    padding-left:12px;
    align-items: center;
}

.book image{
    border:1px solid rgb(114, 111, 111);
}

.book_name{
    font-size:16px;
    font-weight:bold;
}

.book_text{
    padding-left:16px;
    display: flex;
    color: rgb(19, 18, 18);
    flex-direction: column;
    background-color: rgb(254, 254, 255);
}

.chaxunjieguo{
    font-size:16px;
    padding-left:5px;
    padding-top: 10px;
    padding-bottom: 10px;
}